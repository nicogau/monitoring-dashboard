{% extends 'base.html.twig' %}

{% block title %}info serveur{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center ">
        <div class="mb-3">
            <h3>information sur le serveur</h3>
            <table class="table">
                <tbody>
                    <tr>
                        <th>nom</th>
                        <td>{{ server_info.name }}</td>
                    </tr>
                    <tr>
                        <th>Ip</th>
                        <td>{{ server_info.ip }}</td>
                    </tr>

                    <tr>
                        <th>hôte ssh</th>
                        <td>{{ server_info.sshHostKey }}</td>
                    </tr>
                    <tr>
                        <th>disq. utilisé</th>
                        <td>{{ server_info.diskUsed }}</td>
                    </tr>
                    <tr>
                        <th>disq. libre</th>
                        <td>{{ server_info.diskFree }}</td>
                    </tr>
                    <tr>
                        <th>disq. total</th>
                        <td>{{ server_info.diskSize }}</td>
                    </tr>
                    <tr>
                        <th>mem. total</th>
                        <td>{{ server_info.memSize }}</td>
                    </tr>
                    <tr>
                        <th>dern. sauvegarde</th>
                        <td>{{ server_info.saveStateLast ? server_info.saveStateLast|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>os</th>
                        <td>{{ server_info.osType }}</td>
                    </tr>
                    <tr>
                        <th>version</th>
                        <td>{{ server_info.osVersion }}</td>
                    </tr>
                    <tr>
                        <th>date de création</th>
                        <td>{{ server_info.createdAt ? server_info.createdAt|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>dern. modif.</th>
                        <td>{{ server_info.updatedAt ? server_info.updatedAt|date('Y-m-d') : '' }}</td>
                    </tr>
                </tbody>
            </table>       
        
        </div>
    </div>
    

    <div class="d-flex flex-column justify-content-center  align-items-center">
        <a class="btn btn-warning" href="{{ path('app_server_info_edit', {'id': server_info.id}) }}">modifier</a>
        <a class="btn btn-primary my-1" href="{{ path('app_info') }}">retour à la liste</a>
        {{ include('server_info/_delete_form.html.twig') }}
    </div>

{% endblock %}
